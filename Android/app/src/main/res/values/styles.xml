<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#5f6aaa</item>
        <item name="colorPrimary">#5f6aaa</item>
        <item name="colorAccent">#5f6aaa</item>

    </style>





    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimaryDark">#5f6aaa</item>
            <item name="colorPrimary">#5f6aaa</item>
            <item name="colorAccent">#5f6aaa</item>

        </style>
        <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimaryDark">#5f6aaa</item>
            <item name="colorPrimary">#5f6aaa</item>
            <item name="colorAccent">#5f6aaa</item>
        </style>



        <style name="FacebookLoginButton">
            <item name="android:text">Facebook</item>
            <item name="android:textSize">15sp</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="colorButtonNormal">@color/colorAccent</item>
            <item name="android:paddingTop">10dp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:layout_marginLeft">4dp</item>
            <item name="android:layout_marginRight">5dp</item>
        </style>

        <style name="GoogleSignInButton">
            <item name="android:textSize">15sp</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="colorButtonNormal">@android:color/white</item>
            <item name="android:paddingTop">17dp</item>
            <item name="android:paddingBottom">17dp</item>
            <item name="android:layout_marginLeft">4dp</item>
            <item name="android:layout_marginRight">5dp</item>
        </style>

</resources>
