<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dip">
            <TextView
                android:padding="10dip"
                android:id="@+id/exerciseTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/exercisePhotoImageView"
                android:layout_width="match_parent"
                android:layout_height="350dip"
                android:padding="15dip"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/exerciseRepsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:padding="5dip"
                    android:gravity="center"/>

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/darkestGray"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/exerciseSetTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:padding="5dip"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="Description"
                    android:padding="10dip"
                    android:textStyle="bold"
                    android:gravity="left"/>
                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/exerciseSpeakerImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/speaker"
                    android:background="@drawable/exercise_speaker_bg"
                    android:layout_gravity="end"
                    android:padding="10dip"
                    android:scaleType="centerInside"/>
            </LinearLayout>
            <TextView
                android:id="@+id/exerciseDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:padding="10dip"
                android:gravity="left"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>